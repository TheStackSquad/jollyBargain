{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "func-names": "off",
    "consistent-return": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "radix": "off"
  }
}
